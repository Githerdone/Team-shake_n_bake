  <div class="modal fade" id="myModal">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
          <h4 class="modal-title">New Question</h4>
        </div>
        <div class="modal-body">
          <%= form_tag(questions_path, method: 'post', :multipart => true) do %>
            <%= label(:question, :title) %><br>
            <%= text_field(:question, :title, class: "form-control") %><br><br>
            <%= label(:question, :body) %><br>
            <%= text_area(:question, :body,  class: "form-control") %><br><br>
            <%= label(:question, :image) %>
            <%= file_field(:question, :image) %>
            <br><%= submit_tag("Create Question!", class: "btn btn-primary btn-sm") %>
          <% end %>
        </div>
      </div>
    </div>
  </div>