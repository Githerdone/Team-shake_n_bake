<h1>Sign In!</h1>

<%= form_tag('/sessions', method: 'post') do %>
  <%= label_tag(:username, 'Username') %><br>
  <%= text_field_tag(:username, nil, placeholder: 'Username')%><br>
  <%= label_tag(:password, 'Password') %><br>
  <%= password_field_tag(:password, nil, placeholder: 'Password') %><br><br>
  <%= submit_tag("Sign In", class: "btn btn-primary btn-sm") %>
  <% end %>